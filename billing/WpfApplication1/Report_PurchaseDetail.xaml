            <DatePicker Height="28" HorizontalAlignment="Left" Margin="472,-32,0,0" Name="datePicker2" VerticalAlignment="Top" Width="180" />
            <Button Content="Search" Margin="550,-48,0,0" Height="35" Name="button5" Width="75" Click="button5_Click"  />
            <Label Content="Bill No:" Foreground="White" Height="28" Name="label3" Margin="62,2,0,0" />
            <TextBox Height="23" Name="textBox1" Width="160" Margin="-375,-32,0,0" />
            
        </StackPanel>
        
        <StackPanel>
            <Button Content="print" Height="23" Name="button1" Width="75" Margin="375,150,0,0" Click="button1_Click" />
            <DataGrid AutoGenerateColumns="False" Height="300" Name="dataGrid1" Width="800" Margin="-75,232,0,0" />
        </StackPanel>


    </Grid>
    
</Window>
